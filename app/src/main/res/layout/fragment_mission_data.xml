<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="launch.spaceapps.cairo.com.cairolaunchteam.Mission_dataFragment">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#7F7F7F"
        android:padding="7dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mission_icon"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_name"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_target"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_type"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#7F7F7F"
        android:padding="7dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:id="@+id/payload">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission Payload"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#7F7F7F"
        android:layout_gravity="center"
        android:padding="7dp"
        android:clickable="true"
        android:id="@+id/vehicle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission Vehicle"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#7F7F7F"
        android:layout_gravity="center"
        android:padding="7dp"
        android:clickable="true"
        android:id="@+id/launch">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Site"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#7F7F7F"
        android:padding="7dp"
        android:clickable="true"
        android:layout_gravity="center"
        android:id="@+id/cost">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission Cost"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#7F7F7F"
        android:layout_gravity="center"
        android:padding="7dp"
        android:clickable="true"
        android:id="@+id/timeline">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission Timeline"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>

</ScrollView>
